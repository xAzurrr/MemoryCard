<Window x:Class="Memory_Card_Game____Noah_Azur_Nacar.SpielZwanzigKartenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Memory_Card_Game____Noah_Azur_Nacar"
        mc:Ignorable="d"
        Title="MemoryCardGame im Spiel - by Noah Azur Nacar" Height="500" Width="600"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Background="MediumPurple" Foreground="Yellow" FontWeight="UltraBlack">
    <DockPanel>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="10"
                    DockPanel.Dock="Top"
                    >

            <TextBlock x:Name="tbLebenAnzahl"
                       Text="Leben: 10"
                       FontSize="20"
                       Margin="10"/>

            <TextBlock Text=" | "
                       FontSize="20"
                       Margin="0,7,0,0"/>

            <TextBlock x:Name="txtZeitMesser"
                       Text="Zeit: 00:00"
                       FontSize="20"
                       Margin="10"/>
        </StackPanel>

        <UniformGrid Rows="4" Columns="5" Margin="20">
            <Button x:Name="btn0" Content=" x " FontSize="20" Height="50" Width="50"    Background="Yellow" BorderThickness="3"/>
            <Button x:Name="btn1" Content=" x " FontSize="20" Height="50" Width="50"    Background="Yellow" BorderThickness="3"/>
            <Button x:Name="btn2" Content=" x " FontSize="20" Height="50" Width="50"    Background="Yellow" BorderThickness="3"/>
            <Button x:Name="btn3" Content=" x " FontSize="20" Height="50" Width="50"    Background="Yellow" BorderThickness="3"/>
            <Button x:Name="btn4" Content=" x " FontSize="20" Height="50" Width="50"    Background="Yellow" BorderThickness="3"/>
            <Button x:Name="btn5" Content=" x " FontSize="20" Height="50" Width="50"    Background="Yellow" BorderThickness="3"/>
            <Button x:Name="btn6" Content=" x " FontSize="20" Height="50" Width="50"    Background="Yellow" BorderThickness="3"/>
            <Button x:Name="btn7" Content=" x " FontSize="20" Height="50" Width="50"    Background="Yellow" BorderThickness="3"/>
            <Button x:Name="btn8" Content=" x " FontSize="20" Height="50" Width="50"    Background="Yellow" BorderThickness="3"/>
            <Button x:Name="btn9" Content=" x " FontSize="20" Height="50" Width="50"    Background="Yellow" BorderThickness="3"/>
            <Button x:Name="btn10" Content=" x " FontSize="20" Height="50" Width="50"   Background="Yellow" BorderThickness="3"/>
            <Button x:Name="btn11" Content=" x " FontSize="20" Height="50" Width="50"   Background="Yellow" BorderThickness="3"/>
