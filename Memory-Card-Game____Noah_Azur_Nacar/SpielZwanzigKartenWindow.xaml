            <Button x:Name="btn17" Content=" x " FontSize="20" Height="50" Width="50"   Background="Yellow" BorderThickness="3"/>
            <Button x:Name="btn18" Content=" x " FontSize="20" Height="50" Width="50"   Background="Yellow" BorderThickness="3"/>
            <Button x:Name="btn19" Content=" x " FontSize="20" Height="50" Width="50"   Background="Yellow" BorderThickness="3"/>

        </UniformGrid>
    </DockPanel>
</Window>
